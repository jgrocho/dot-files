[alias]
    hist = log --pretty=tformat:\"%C(yellow)%h%Creset %ad | %s%C(yellow)%d%Creset [%an]\" --graph --date=short
    lg = log --pretty=tformat:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --graph --abbrev-commit --date=relative

[core]
    editor = vim
    excludesfile = ~/.gitignore
    whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
    autocrlf = input
    safecrlf = true

[color]
    ui = auto

[color "diff"]
    whitespace = red reverse
